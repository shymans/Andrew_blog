<table>
  <thead>
    <tr>
      <th width="300">Title</th>
      <th width="800">Article</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, "/articles/#{article.id}" %></td>
        <td><%= truncate(article.body, length: 250) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


